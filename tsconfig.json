{
  "compilerOptions": {
    "paths": {
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@env/*": ["src/environments/*"]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
